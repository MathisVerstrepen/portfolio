---
import Layout from "../layouts/Layout.astro";

import { useTranslations } from "../i18n/utils";

export function getStaticPaths() {
  return [{ params: { lang: "en" } }, { params: { lang: "fr" } }];
}
const { lang } = Astro.params;

const t = useTranslations(lang as "en" | "fr");
---

<Layout title={t("home.title") as string}>
  <main class="h-full w-full flex items-center justify-center z-10 absolute">
    <div class="h-[95%] w-[97%] bg-ghost_white bg-opacity-[0.033] border-radial-box grid grid-rows-[80%_20%] p-20">
      <div class="h-fit self-center">
        <h1 class="text-[8rem] leading-[1.1] font-ClashDisplay-Semibold text-ghost_white">VERSTREPEN</h1>
        <h1 class="text-[8rem] leading-[1.1] font-ClashDisplay-Semibold text-scarlet">Mathis</h1>

        <h3 class="text-4xl text-ghost_white text-opacity-50 font-ClashDisplay-Medium mt-10">
          {t("home.desc.web")}
          <span class="text-scarlet">&</span>
          {t("home.desc.data")}
        </h3>
      </div>

      <a
        class="bg-ghost_white bg-opacity-5 w-fit h-fit py-3 px-14 rounded-xl self-center justify-self-center border-radial-button hover:scale-[1.02] duration-300 hover:bg-opacity-0"
        role="button"
        href=`/${lang}/about`
      >
        <p class="text-ghost_white font-ClashDisplay-Semibold text-xl uppercase leading-none">
          {t("home.button.text")}
        </p>
      </a>
    </div>
  </main>
</Layout>

<style>
  .border-radial-box {
    border-style: solid;
    border-width: 4px;
    border-image: radial-gradient(rgba(255, 255, 255, 0.5) 0%, rgba(255, 255, 255, 0) 105%) 1;
    border-radius: 10px;
  }

  .border-radial-button {
    position: relative;
    z-index: 0;
  }

  .border-radial-button:before {
    content: "";
    position: absolute;
    z-index: -1;
    inset: 0;
    padding: 2px;
    border-radius: 16px;
    background: radial-gradient(rgb(255, 255, 255) 0%, rgba(255, 255, 255, 0) 105%);
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: destination-out;
    mask-composite: exclude;
  }


</style>
