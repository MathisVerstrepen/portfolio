---
interface Props {
    technoLevel: "1" | "2" | "3";
}

const { technoLevel } = Astro.props;
---

<div class="absolute right-5">
    {technoLevel === "3" && <div class="bg-green-500 h-4 w-4 rounded-full border-green-700 border-2 bg-opacity-10 border-opacity-60" />}
    {technoLevel === "2" && <div class="bg-yellow-500 h-4 w-4 rounded-full border-yellow-700 border-2 bg-opacity-10 border-opacity-60" />}
    {technoLevel === "1" && <div class="bg-red-500 h-4 w-4 rounded-full border-red-700 border-2 bg-opacity-10 border-opacity-60" />}    
</div>